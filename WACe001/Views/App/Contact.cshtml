
@model WACe001.ViewModel.ContactViewModel

@{
	ViewBag.Title = "Reach out and touch someone";
}

<h2>Drop Us A Line</h2>

<form action="/" method="post">
	<label asp-for="Name">Who are you?</label>
	<input asp-for="Name" type="text" />
	<label asp-for="Email">Email</label>
	<input asp-for="Email" type="email" />
	<label asp-for="Message">What on earth do you want?</label>
	<textarea asp-for="Message" cols="40" rows="4"></textarea>
	<div>
		<input type="submit" value="Push me" />
	</div>
</form>
