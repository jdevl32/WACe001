@model WACe001.ViewModel.ContactViewModel

@{
	ViewBag.Title = "Reach out and touch someone";
}

@section script
{
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<h2>Drop Us A Line</h2>

		<form method="post">
			<div asp-validation-summary="ModelOnly"></div>

			@if (!string.IsNullOrWhiteSpace(ViewBag.UserMessage))
			{
				<div>@ViewBag.UserMessage</div>
			}

			<div class="form-group">
				<label asp-for="Name">...And you are?</label>
				<input class="form-control" asp-for="Name" type="text" />
				<span class="text-muted" asp-validation-for="Name"></span>
			</div>
			<div class="form-group">
				<label asp-for="Email">SSN, mother's maiden name...no, email</label>
				<input class="form-control" asp-for="Email" type="email" />
				<span class="text-muted" asp-validation-for="Email"></span>
			</div>
			<div class="form-group">
				<label asp-for="Message">What on earth do you want?</label>
				<textarea class="form-control" asp-for="Message" cols="40" rows="4"></textarea>
				<span class="text-muted" asp-validation-for="Message"></span>
			</div>
			<div class="form-group">
				<a class="btn btn-default" asp-controller="App" asp-action="Index">I'm scared, go back!</a>
				<input class="btn btn-primary" type="submit" value="Come on, send it"/>
			</div>
		</form>
	</div>
</div>
